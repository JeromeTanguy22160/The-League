{% extends "layout.html.twig" %}

{% block content %}

        <h2>{{ data.title }}</h2>
        <div class = "cards">
        {% for team in teams %}
            <div class = "card-team">
                <h3>{{ team.name }}</h3>
                <img src="{{ player.logo }}" alt={{ player.logo }}>
                <p>{{ player.name }}</p>
                <a href="#">{{ team.button_text }}</a>
            </div>
        {% endfor %}
        </div>

{% endblock %}