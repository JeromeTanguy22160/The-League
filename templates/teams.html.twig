{% extends "layout.html.twig" %}

{% block content %}

    <header class = "header">
        <h1>{{ page_title }}</h1>
        
        <nav class = "nav">
            <ul>
                {% for link in data.links %}
                <li class = "link">
                    <a href = "#">{{ link }}</a>
                </li>
            {% endfor %}
            </ul>
        </nav>
    </header>
    
    <main>
        <h2>{{ data.title }}</h2>
        <div class = "cards">
        {% for team in teams %}
            <div class = "card">
                <img src="{{ team.logo }}" alt={{ team.logo }}>
                <h3>{{ team.name }}</h3>
                <p>{{ team.description }}</p>
                <a href="#">{{ team.button_text }}</a>
            </div>
        {% endfor %}
        </div>
    </main>

{% endblock %}
